<div class="banner" style="background-image: url('https://res.cloudinary.com/dwclozjta/image/upload/v1678380009/Map-banner-min-ok_bc7wrs.png');">
  <%# <div class="card-beige"> %>
    <div class="container py-4 col-md-6 card-log-in">
    <h2>SIGN IN</h2>
    <p>Please enter your login and password !</p>
    <p>You can <strong>Register here!</strong></p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
