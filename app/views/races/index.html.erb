<div class="container mt-4">
  <div class="d-flex justify-content-between">
    <div class="card-container">
        <% @races.each do |race| %>
          <div class="card-scroll">
              <%= link_to new_boat_path, class:"text-decoration-none" do %>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= race.photo %>)">
                    <%= race.name %>
                  </div>
              <% end %>
          </div>
        <% end %>
    </div>
    <div id="map" style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>

</div>
